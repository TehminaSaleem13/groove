<%if !@action_code.blank? %>
    <br/>
    <% barcode_string = generate_barcode(@action_code)%>
    <span style="font-size: 12px; margin-bottom: 10px; margin-left: 10px;"><%= barcode_string %></span>
    <br/>
    <br/>
    <br/>

    <center><%= pdf_image_tag(@action_code+".png", {:width => 255, :height => 42}) %></center>

<%else%>
    <br/>
    <span style="font-size: 20px; margin-bottom: 10px; margin-left: 45px;">Barcode not available</span>
<%end%>
</body>
</html>
