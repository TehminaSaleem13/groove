<div style="padding-top: 20px;">
	<div class="well span7" style="margin-left: 250px;">
		<div class="span1"  style=" margin-bottom: 5px; align: right;">
			<%= link_to 'Back', {action: 'select_plan'}, class: "btn btn-primary"%>
		</div>
		<%= form_for :subscription, url: {action: 'create'} do |f|%>
			<div class="control-group span7">
				<label class="control-label span2">Email:</label>
				<div class="controls span4">
					<%= f.email_field :email %>
				</div>
				<label class="control-label span2">Username:</label>
				<div class="controls span4">
					<%= f.text_field :user_name %>
				</div>
				<label class="control-label span2">Password:</label>
				<div class="controls span4">
					<%= f.password_field :password %>
				</div>
				<label class="control-label span2">Confirm Password:</label>
				<div class="controls span4">
					<%= f.password_field :password_confirmation %>
				</div>
				<label class="control-label span2">Amount:</label>
				<div class="controls span4" style="margin-bottom: 10px;">
					<%= "#{@plan['amount']}.00$"%>
					<%= f.hidden_field :amount, id: "amount", value: "#{@plan['amount']}"%>
				</div>
				<label class="control-label span2"></label>
				<div>
					<%= f.button('Register', {class: 'btn btn-primary span2'})%>
				</div>
			</div> 
		<%end%>
	</div> 
</div>
