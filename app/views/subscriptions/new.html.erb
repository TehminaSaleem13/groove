<div style="padding-top: 20px;">
	<div class="well span8" style="margin-left: 150px;">
		<%Apartment::Tenant.switch()%>
		<%= form_for @subscription, url:{action: 'create'}, method: 'POST' do |f| %>
			<% if @subscription.errors.any? %>
				<div class="error_messages">
					<h2><%= pluralize(@subscription.errors.count,"error") %> prohibited this subscription from being saved:</h2>
					<ul>
					<% @subscription.errors.full_messages.each do |msg| %>
						<li><%= msg%></li>
					<% end %>
					</ul>
				</div>
			<% end %>
			<div class="control-group">
				<%#= f.hidden_field :stripe_card_token%>
				<label class="control-label span3">Email:</label>
				<div class="controls">
					<%= f.email_field :email %>
				</div>
				<label class="control-label span3"><%= label_tag :card_number, "Credit Card Number:" %></label>
				<div class="controls">					
					<%= text_field_tag :card_number, nil, name: nil %>
				</div>
				<label class="control-label span3"><%= label_tag :card_code, "Security Code on Card (CVV):" %></label>
				<div class="controls">	
					<%= text_field_tag :card_code, nil, name: nil%>
				</div>
				<label class="control-label span3"><%= label_tag :card_month, "Card Expiration:" %></label>
				<div class="controls">					
					<%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
					<%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
				</div>
				<div id="stripe_error">
					<noscript>
						Javascript is not enabled and is required for this form. First enable it in your web browser settings.
					</noscript>
				</div>
				<div class="actions">
					<center>
					<%= f.submit "Subscribe",class: "btn btn-primary" %>
				</center>
				</div>
			</div>
		<% end %>
	</div>
</div>
